  "welcome": {
    "subject": "Welcome to SGA&CD!",
    "template": "<!DOCTYPE html>\n<html>\n<head>\n  <meta charset=\"UTF-8\" />\n  <style>\n    body { margin: 0; padding: 0; background-color: #f4f4f4; font-family: Arial, sans-serif; }\n    .email-container { max-width: 600px; margin: 0 auto; background-color: #ffffff; border: 1px solid #dcdcdc; }\n    .header { background-color: #018243; color: white; padding: 20px; text-align: center; }\n    .header h1 { margin: 0; font-size: 24px; text-transform: uppercase; color: #fff; }\n    .header img { max-height: 60px; margin-bottom: 10px; filter: brightness(0) invert(1); }\n    .content { padding: 20px; font-size: 16px; color: #333333; line-height: 1.6; }\n    .footer { background-color: #eeeeee; padding: 15px; text-align: center; font-size: 13px; color: #777777; }\n    .btn { display: inline-block; padding: 10px 20px; background-color: #018243; color: white !important; text-decoration: none; border-radius: 4px; margin-top: 20px; }\n  </style>\n</head>\n<body>\n  <div class=\"email-container\">\n    <div class=\"header\">\n      <img src=\"https://upload.wikimedia.org/wikipedia/commons/b/b7/Coat_of_arms_of_Sindh_Province.svg\" alt=\"Sindh Logo\" style='color: white !important' />\n      <h1>S&GAD Law Section</h1>\n    </div>\n    <div class=\"content\">\n      <p>Dear {{name}},</p>\n      <p>Welcome to SGA&CD! Please verify your email address to activate your account.</p>\n      <p>Click the button below to verify your email address:</p>\n      <a href=\"{{verifyLink}}\" class=\"btn\">Verify Email</a>\n      <p>If you did not sign up for this account, you can safely ignore this email.</p>\n      <p>Regards,<br />\n        <strong>S&GAD Law Section</strong><br />\n        law@sindh.gov.pk<br />\n        +92-21-9999999\n      </p>\n    </div>\n    <div class=\"footer\">\n      &copy; 2025 Sindh Government Law Firm. All rights reserved.<br />\n      Government of Sindh, Karachi, Pakistan\n    </div>\n  </div>\n</body>\n</html>"
  },
