{
  "welcome": {
    "subject": "Welcome to SGLP!",
    "template": "<p>Hello {{name}},</p><p>Thank you for registering at SGLP.</p>"
  },
  "passwordReset": {
    "subject": "Reset Your Password",
    "template": "<p>Hi {{name}},</p><p>Click <a href='{{resetLink}}'>here</a> to reset your password.</p>"
  },
  "otp": {
    "subject": "Your OTP Code",
    "template": "<p>Dear {{name}},</p><p>Your OTP is: <b>{{otp}}</b></p>"
  },
  "accountApproved": {
    "subject": "Account Approved",
    "template": "<p>Congratulations {{name}}, your account has been approved!</p>"
  }
}